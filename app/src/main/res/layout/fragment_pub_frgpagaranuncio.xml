<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tendero.Inicio_sesion.ui.Mi_publicidad.pub_frgpagaranuncio"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/activity_margin"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pub_varstrpagaranuncio1"
            style="@style/txtstyle_title"
            android:layout_marginBottom="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="90dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pub_varstrpagaranuncio2"
                    android:layout_marginBottom="15dp"
                    style="@style/txtstyle_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="@string/pub_varstrpagaranuncio4"
                        style="@style/txtstyle_content"/>
                    <TextView
                        android:id="@+id/pub_patxtcargodia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="{dato}"
                        style="@style/txtstyle_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>




        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/pub_varstrpagaranuncio5"/>
        <TextView
            android:id="@+id/pub_patxtdia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{dato}"/>

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/pub_varstrpagaranuncio6"/>
        <TextView
            android:id="@+id/pub_patxttotalpago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{dato}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pub_varstrpagaranuncio3"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/pub_varstrpagaranuncio7"/>
        <TextView
            android:id="@+id/pub_patxtfechadesde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{dato}"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/pub_varstrpagaranuncio8"/>
        <TextView
            android:id="@+id/pub_patxtfechahasta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{dato}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pub_varstrpagaranuncio9"/>

        <Button
            android:id="@+id/pub_pabtnpagoefectivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pub_varstrpagaranuncio10"/>
        <Button
            android:id="@+id/pub_pabtncancelarpago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_btn_cancelar"/>
        <Button
            android:id="@+id/pub_pabtnpagaranuncio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pub_varstrpagaranuncio11"/>
    </LinearLayout>
</ScrollView>