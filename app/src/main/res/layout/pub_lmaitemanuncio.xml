<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardMaxElevation="4dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cardMisAnuncios">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pub_lmaimgvwimgprev"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@color/grey_400"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pub_varstrlistadomisanuncios1"/>
        <TextView
            android:id="@+id/pub_lmatxttituto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{dato}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pub_varstrlistadomisanuncios2"/>
        <TextView
            android:id="@+id/pub_lmatxtfechapub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{dato}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pub_varstrlistadomisanuncios3"/>
        <TextView
            android:id="@+id/pub_lmatxtduracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{dato}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pub_varstrlistadomisanuncios4"/>
        <TextView
            android:id="@+id/pub_lmatxtnrovistas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{dato}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pub_varstrlistadomisanuncios5"/>
        <TextView
            android:id="@+id/pub_lmatxttasa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{dato}"/>

        <Button
            android:id="@+id/pub_lmabtnverdetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ver"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>