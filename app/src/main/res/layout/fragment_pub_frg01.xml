<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tendero.Inicio_sesion.ui.Mi_publicidad.pub_frg01"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgVw_publicidad_definido"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/grey_400"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pub_01_str1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_pubCrearAnuncio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pub_01_str2"/>

        <Button
            android:id="@+id/btn_mis_anuncios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pub_01_str3"/>
    </LinearLayout>

</LinearLayout>